# Local configuration for a work ZSH environement.

# Homebrew.
export PATH="${HOMEBREW_PREFIX}/opt/openssl/bin:$PATH"
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:/usr/local/sbin:$PATH"

# Access numpy when ssh with bench.
# https://cloud.google.com/iap/docs/using-tcp-forwarding#increasing_the_tcp_upload_bandwidth
export CLOUDSDK_PYTHON=$HOME/.pyenv/versions/bench/bin/python
export CLOUDSDK_PYTHON_SITEPACKAGES=1

alias bench="PYENV_VERSION=bench bench"
alias note="code $HOME/Work/flowernotes/notes/random_notes.md"

# Github access in bench.
ssh-add -l | grep -q `ssh-keygen -lf ~/.ssh/github  | awk '{print $2}'` || ssh-add --apple-use-keychain ~/.ssh/github
